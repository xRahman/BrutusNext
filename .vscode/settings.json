// Place your settings in this file to overwrite default and user settings.
{
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/*.js": { "when": "$(basename).ts"}
    },
     // Controls the font size.
    "editor.fontSize": 20,
    "editor.rulers": [80],
    "editor.tabSize": 2,
    "window.zoomLevel": -0.2
}