// Place your settings in this file to overwrite default and user settings.
{
    // Configure glob patterns for excluding files and folders.
    "files.exclude":
    {
        ".git/": true,
        "node_modules/": true,
        //"**/*.js": { "when": "$(basename).ts"},
        "build/": true,
        "documentation/": true,
        "resources/": true,
        ".gitattributes": true,
        ".gitignore": true,
        "**/*.bat": true
    },
    "search.exclude":
    {
        ".git/": true,
        "node_modules/": true,
        "documentation/": true,
        "build/": true,
        "**/*.bat": true
    },
    "editor.rulers": [80],
    "editor.tabSize": 2,
    // The default end of line character.
    "files.eol": "\n",
    // Bookmarks will stick to the code rather than line number.
    // (Requires 'Bookmarks' extension.)
    "bookmarks.useStickyBookmarks": true
}