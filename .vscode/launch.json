{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch BrutusNextServer",
            // IMPORTANT: "node2" is an experimental node debugger.
            // Default is: "type": "node"
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}/src/server/BrutusNextServer.ts",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"/*,
                "--harmony_rest_parameters",
                "--harmony_proxies"*/
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "externalTerminal",
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/server/build/**/*.js" ]
        }
    ]
}